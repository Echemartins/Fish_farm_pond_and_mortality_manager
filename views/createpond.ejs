<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Document</title>
        <link rel="stylesheet" href="/css/index.css" />
        <link rel="stylesheet" href="/css/createpond.css" />
    </head>
    <body>
        <header>
            <div class="header">
                <h1>Golch farms</h1>
                <nav>
                    <a href="/">Home</a>
                    <a href="/createpond">Create pond</a>
                </nav>
            </div>
            <div class="search">
                <input placeholder="search ponds" type="text" />
                <link rel="stylesheet" href="./index.css" />
                <link rel="stylesheet" href="createpond.css" />
            </div>
        </header>
        <div class="container">
            <div class="form-container">
                <h2>Create Pond</h2>
                <form id="createPondForm" action="/createpond" method="POST">
                    <!-- Pond Name -->
                    <div class="form-group">
                        <label for="pondName">Pond Name</label>
                        <input
                            type="text"
                            id="pondName"
                            name="pondName"
                            required
                        />
                    </div>

                    <!-- Stock Number -->
                    <div class="form-group">
                        <label for="stockNumber">Stock Number</label>
                        <input
                            type="number"
                            id="stockQuantity"
                            name="stockQuantity"
                            required
                            min="0"
                        />
                    </div>

                    <!-- Responsible Person -->
                    <div class="form-group">
                        <label for="responsible">Responsible Person</label>
                        <input
                            type="text"
                            id="responsible"
                            name="responsible"
                            required
                        />
                    </div>

                    <!-- Pond Location -->
                    <div class="form-group">
                        <label for="location">Pond Location</label>
                        <input
                            type="text"
                            id="location"
                            name="location"
                            required
                        />
                    </div>

                    <!-- Pond Size (in square meters) -->
                    <div class="form-group">
                        <label for="size">Pond Size (sq. meters)</label>
                        <input
                            type="number"
                            id="size"
                            name="size"
                            required
                            min="0"
                            step="0.01"
                        />
                    </div>

                    <!-- Additional Notes -->
                    <div class="form-group">
                        <label for="additionalNotes">Additional Notes</label>
                        <textarea
                            id="additionalInformation"
                            name="additionalInformation"
                            rows="3"
                            placeholder="Enter any relevant information..."
                        ></textarea>
                    </div>

                    <!-- Submit Button -->
                    <div class="form-group">
                        <button type="submit">Create Pond</button>
                    </div>
                </form>
            </div>
        </div>
    </body>
</html>
