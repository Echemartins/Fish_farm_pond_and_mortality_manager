<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Document</title>
        <link rel="stylesheet" href="/css/index.css" />
        <link rel="stylesheet" href="/css/mortalitymordal.css" />
    </head>
    <body>
        <header>
            <div class="header">
                <h1>Golch farms</h1>
                <nav>
                    <a href="/">Home</a>
                    <a href="/createpond">Create pond</a>
                </nav>
            </div>
            <form action="/" method="GET">
                <input
                  type="text"
                  name="q"
                  placeholder="Search ponds by name"
                  class="search-input"
                />
                <button type="submit" class="search-button">Search</button>
              </form>
        </header>
        <main>
            <div class="ponds">
                <%allPonds.forEach(function(pond){%>
                <div class="pond">
                    <a href="/ponds/<%= pond._id %>" class="pond-name line1"
                        ><%=pond.pondName%></a
                    >
                    <p class="stock-no line1">
                        <strong style="color: black"
                            >Quantity Stocked :
                        </strong>
                        <%=pond.stockQuantity%>
                    </p>
                    <p class="current-no line1">
                        Current Quantity:<%=pond.currentFishCount%>
                    </p>

                    <div data-pond="<%= pond._id%>" id="modal" class="modal">
                        <div class="update-mortality">
                            <h2>Update Mortality for Pond</h2>
                            <form
                                id="updateMortalityForm"
                                action="/ponds/<%=pond._id%>/mortality"
                                method="POST"
                            >
                                <!-- Pond Name -->
                                <div class="form-group">
                                    <label for="pondName">Pond Name</label>
                                    <input
                                        type="text"
                                        id="pondName"
                                        name="pondName"
                                        value="<%=pond.pondName%>"
                                        readonly
                                    />
                                </div>

                                <!-- Date of Mortality Record -->
                                <div class="form-group">
                                    <label for="mortalityDate">Date</label>
                                    <input
                                        type="date"
                                        id="mortalityDate"
                                        name="date"
                                        required
                                    />
                                </div>

                                <!-- Mortality Count -->
                                <div class="form-group">
                                    <label for="mortalityCount"
                                        >Mortality Count</label
                                    >
                                    <input
                                        type="number"
                                        id="mortalityCount"
                                        name="quantity"
                                        required
                                        min="0"
                                    />
                                </div>

                                <!-- Comments -->
                                <div class="form-group">
                                    <label for="comments">Comments</label>
                                    <textarea
                                        id="comments"
                                        name="comment"
                                        rows="3"
                                        placeholder="Enter any relevant comments..."
                                    ></textarea>
                                </div>

                                <!-- Submit Button -->
                                <div class="form-group">
                                    <button type="submit">
                                        Update Mortality
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <hr />

                <%})%>
            </div>
        </main>

        <script src="/scripts/script.js"></script>
    </body>
</html>
